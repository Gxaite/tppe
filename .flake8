[flake8]
max-line-length = 120
exclude = .git,__pycache__,venv,env,migrations
ignore = E203, W503

[pycodestyle]
max-line-length = 120

[tool:pytest]
testpaths = backend/tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*
addopts = -v --cov=backend/app --cov-report=html --cov-report=term

[coverage:run]
omit = 
    */tests/*
    */venv/*
    */env/*
    */__pycache__/*
    */migrations/*
